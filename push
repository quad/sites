#!/bin/sh

set -e

FROM=$(dirname "$0")
TO=quad_quadsites@ssh.phx.nearlyfreespeech.net

rsync \
	--archive \
	--partial \
	--progress \
	--delete \
	--exclude "$(basename $0)" \
	--exclude '.*.swp' \
	--exclude '.git' \
	--exclude '.DS_Store' \
	--delete-excluded \
	--filter 'protect .well-known' \
	--filter 'protect **/.well-known/acme-challenge' \
	-- \
	"$FROM" "$TO:"

ssh "$TO" tls-setup.sh
